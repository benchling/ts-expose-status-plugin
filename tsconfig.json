{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["es2017", "DOM"],
    "module": "commonjs",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src/**/*"]
}
